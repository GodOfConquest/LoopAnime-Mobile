<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_black" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/left"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/main_color_black"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/txtSearch"
            style="@style/search_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search" />

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:divider="@color/gray_light"
            android:dividerHeight="@dimen/divider" />

        <Button
            android:id="@+id/logout"
            style="@style/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color_black_dk"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="@dimen/pad_10dp"
            android:gravity="left|center_vertical"
            android:padding="@dimen/pad_10dp"
            android:text="@string/logout"
            android:textColor="@color/nav_color"
            android:textSize="@dimen/txt_16sp" />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>

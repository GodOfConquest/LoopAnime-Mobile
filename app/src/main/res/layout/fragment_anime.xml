<com.loop_anime.app.ui.view.NotifyingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_anime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.loop_anime.app.ui.activity.AnimeActivity$PlaceholderFragment">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/image_anime_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/anime_poster_image_height"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/space_massive"
            android:paddingRight="@dimen/space_large"
            android:layout_marginTop="@dimen/anime_details_margin_top"
            android:paddingBottom="@dimen/activity_vertical_margin" >


            <TextView
                android:id="@+id/text_anime_description"
                android:layout_marginTop="@dimen/space_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Small"
                android:textStyle="italic"/>




            <TextView
                android:id="@+id/text_anime_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_box"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/header_actionbar_background"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@android:color/holo_blue_dark" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/anime_title_height"
                android:orientation="vertical"
                android:paddingTop="@dimen/space_extra_large"
                android:paddingLeft="@dimen/space_massive"
                android:paddingRight="@dimen/space_large"
                android:background="@android:color/holo_blue_dark" >

                <TextView
                    android:id="@+id/text_anime_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@android:style/TextAppearance.Large"
                    android:textColor="@color/white"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/text_anime_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@android:style/TextAppearance.Medium"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</com.loop_anime.app.ui.view.NotifyingScrollView>

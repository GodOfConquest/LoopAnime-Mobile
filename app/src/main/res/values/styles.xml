<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="AppTheme.TransparentActionBar" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar.TransparentActionBar</item>
    </style>

    <style name="ActionBar.TransparentActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/transparent</item>
    </style>

</resources>

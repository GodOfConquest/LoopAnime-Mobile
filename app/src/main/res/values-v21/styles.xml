<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
		<!-- Customize your theme here. -->
	</style>

	<style name="AppTheme.TransparentActionBar" parent="AppTheme">
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:actionBarStyle">@style/ActionBar.TransparentActionBar</item>
	</style>

	<style name="ActionBar.TransparentActionBar" parent="android:Widget.Material.ActionBar">
		<item name="android:background">@color/transparent</item>
	</style>

</resources>
